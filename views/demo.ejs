<html>
<head>
<script src="/js/jquery-1.10.2.min.js"></script>
<script src="/js/bootstrap.min.js"></script>
<link href="/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="/css/style.css"/>
<link href="/css/jquery-ui-1.10.0.custom.css" rel="stylesheet">
<script src="/js/jquery.validate.min.js"></script>
<script src="/js/jquery-ui-1.10.0.custom.min.js"></script>
<script src='/js/jquery.cookie.js'></script>
<script src="/js/jquery.dataTables.js"></script>
<script src="/js/jquery.contextmenu.r2.js"></script>
<script src="/js/jquery.placeholder.1.3.min.js"></script>
<script src="/js/system.js"></script>
<script src="/js/json.js"></script>
<script>
$(document).ready(function(){

 $('#frmCustomer').validate(
 {
  rules: {
    username: {
      minlength: 2,
      required: true
    },
    password: {
      required: true,
      email: true
    },
    subject: {
      minlength: 2,
      required: true
    },
    message: {
      minlength: 2,
      required: true
    }
  },
  highlight: function(element) {
    $(element).closest('.control-group').removeClass('success').addClass('error');
  },
  success: function(element) {
    element
    .text('OK!').addClass('valid')
    .closest('.control-group').removeClass('error').addClass('success');
  }
 });

        $("#addCustomer").click(function () {
            $("#divCustomer").dialog("open");
        });

        // Dialog Simple
        $('#divCustomer').dialog({
            autoOpen: false,
            width: 650,
            buttons: {
                "保存": function () {
                    $('#frmCustomer').submit();
                    //$(this).dialog("close");
                },
                "取消": function () {
                    $(this).dialog("close");
                }
            }
        });

}); // end document.ready

</script>

</head>

<body>
    <form id="frmCustomer" class="form-horizontal">
    <div id="divCustomer" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" title="新增用户">
        <div class="modal-body form-horizontal">
                <div class="control-group">
                    <!-- Text input-->
                    <label class="control-label" for="username">登陆账号</label>
                    <div class="controls">
                        <input id="username" name="username" type="text" placeholder="手机号或者邮箱，登陆账号不能修改" class="input-xlarge">
                    </div>
                </div>
                <div class="control-group">
                    <!-- Text input-->
                    <label class="control-label">登陆密码</label>
                    <div class="controls">
                        <input id="password" type="password" placeholder="密码需由6位以上字母、数字、字符组成" class="input-xlarge">
                    </div>
                </div>
                <div class="control-group">
                    <!-- Select Basic -->
                    <label class="control-label">客户类型</label>

                    <div class="controls">
                        <select id="cust_type" class="input-xlarge">
                            <option>个人客户</option>
                            <option>集团客户</option>
                        </select>
                    </div>
                </div>
                <div class="control-group">
                    <!-- Text input-->
                    <label class="control-label">客户名称</label>
                    <div id="cust_name" class="controls">
                        <input type="text" placeholder="客户名称" class="input-xlarge">
                    </div>
                </div>
                <div class="control-group">
                    <!-- Text input-->
                    <label id="contacter" class="control-label">联系人</label>
                    <div class="controls">
                        <input type="text" placeholder="联系人" class="input-xlarge">
                    </div>
                </div>
                <div class="control-group">
                    <!-- Search input-->
                    <label class="control-label">联系电话</label>
                    <div id="contacter_tel" class="controls">
                        <input type="text" placeholder="请输入手机或者固定电话，比如0755XXXXXXX" class="input-xlarge">
                    </div>
                </div>
        </div>
    </div>
            </form>
          <button id="addCustomer" type="btn" class="btn">Open</button>
          <button type="reset" class="btn">Cancel</button>

</body>

</html>
