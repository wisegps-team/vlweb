    <a href="http://www.google.cn/intl/zh-CN/chrome/browser/" target="_blank">Chrome</a>
    等现代浏览器。</span>
</div>

<div class="container">
    <form class="form-signin">
        <!--<h3 class="form-signin-heading text-center">账号登录</h3>-->
        <img class="logo" src="<%= opt.logo %>" title="Login">
        <div id="alert" class="alert alert-block alert-error fade in">
            <!--<button type="button" class="close" data-dismiss="alert">&times;</button>-->
            <span id="err_msg" data-i18n="login.err_msg"><%= t('login.err_msg') %></span>
        </div>
        <input id="username" type="text" class="input-block-level" placeholder="<%= t('login.username') %>" data-i18n="[placeholder]login.username">
        <input id="password" type="password" class="input-block-level" placeholder="<%= t('login.password') %>" data-i18n="[placeholder]login.password">
        <div class="lang">
            <label class="checkbox">
                <input id="remeber" class="remeber" type="checkbox" value="remember-me"> <span data-i18n="login.remember" class="remeber-label"><%= t('login.remember') %></span>
            </label>
            <select id="lng" class="lng">
                <option value="zh-CN">中文</option>
                <option value="en">English</option>
            </select>
            <span class="lang-label" data-i18n="login.lang"><%= t('login.lang') %></span>
            <input id="_lang" type="hidden" value="<%= opt.lang %>">
        </div>
        <button id="btnLogin" class="btn btn-large btn-primary btn-block" type="button" data-loading-text="Loading..." data-i18n="login.login"><%= t('login.login') %></button>
        <!--<p style="text-align: center; padding: 10px">Version 1.2(Build20151104)</p>-->
    </form>
</div> <!-- /container -->

